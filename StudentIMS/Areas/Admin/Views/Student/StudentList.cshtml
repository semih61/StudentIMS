@model List<Student>



<div class="container">

	<div>
		<div class="col-6">
	<h3 class="display-3">Student List</h3>
		</div>
		<div class="col-6 align-content-center">
			<a asp-controller = "Student" asp-action="Create" class="btn btn-outline-primary form-control">Create</a>
		</div>
	</div>
	
	@if(TempData["success"] != null)
	{
		<partial name = "_SuccessNotification"/>		
	}
	

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Surname</th>
				<th>Student Number</th>
				<th>Age</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var student in Model)
			{
				<tr>
					<td>@student.Name</td>
					<td>@student.Surname</td>
					<td>@student.StudentNumber</td>
					<td>@student.Age</td>
					
					<td>
						<div>
							<a asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id" class="btn btn-primary">Edit</a>
							<a asp-controller="Student" asp-action="Delete" asp-route-id ="@student.Id" class="btn btn-danger">Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>

</div>
