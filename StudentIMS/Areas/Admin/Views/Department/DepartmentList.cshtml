@model List<Department>


<div class="container">

	<div>
		<div class="col-6">
	<h3 class="display-3">Department List</h3>
		</div>
		<div class="col-6 align-content-center">
			<a asp-controller = "Department" asp-action="Create" class="btn btn-outline-primary form-control">Create</a>
		</div>
	</div>
	
	@if(TempData["success"] != null)
	{
		<partial name = "_SuccessNotification"/>		
	}
	

	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>Department Name</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var department in Model)
			{
				<tr>
					<td>@department.Depart</td>
					<td>
						<div>
							<a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-primary">Edit</a>
							<a asp-controller="Department" asp-action="Delete" asp-route-id ="@department.Id" class="btn btn-danger">Delete</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>
